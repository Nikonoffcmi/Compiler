                <MenuItem Header="Список литературы" Height="30" MaxHeight="30"></MenuItem>
                <MenuItem Header="Исходный код программы" Height="30" MaxHeight="30"></MenuItem>
            </MenuItem>
            <MenuItem Header="Справка" Height="30" MaxHeight="30">
                <MenuItem Header="Вызов справки" Height="30" MaxHeight="30"></MenuItem>
                <MenuItem Header="О программе" Height="30" MaxHeight="30"></MenuItem>
            </MenuItem>
            <MenuItem Header="Пуск" Height="30" MaxHeight="30"></MenuItem>
        </Menu>
        <StatusBar DockPanel.Dock="Bottom"></StatusBar>
